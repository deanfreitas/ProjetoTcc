<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ProjetoTcc" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>br.com.projetotcc.entidades.pessoas.dados.Login</class>
		<class>br.com.projetotcc.entidades.pessoas.dados.Role</class>
		<class>br.com.projetotcc.entidades.paciente.alimentos.Almoco</class>
		<class>br.com.projetotcc.entidades.pessoa.Paciente</class>
		<class>br.com.projetotcc.entidades.paciente.dados.AntecedentesFamiliares</class>
		<class>br.com.projetotcc.entidades.paciente.alimentos.Ceia</class>
		<class>br.com.projetotcc.entidades.paciente.alimentos.Colacao</class>
		<class>br.com.projetotcc.entidades.paciente.dados.DadosAntropometricos</class>
		<class>br.com.projetotcc.entidades.paciente.alimentos.Jantar</class>
		<class>br.com.projetotcc.entidades.paciente.alimentos.Lanche</class>
		<class>br.com.projetotcc.entidades.paciente.alimentos.Desjejum</class>
		<class>br.com.projetotcc.entidades.paciente.dados.AtividadeFisica</class>
		<class>br.com.projetotcc.entidades.paciente.dados.DadosClinicos</class>
		<class>br.com.projetotcc.entidades.paciente.dados.ExamesBioquimicos</class>
		<class>br.com.projetotcc.entidades.paciente.dados.UsoMedicamento</class>
		<class>br.com.projetotcc.entidades.paciente.alimentos.ForaHora</class>
		<class>br.com.projetotcc.entidades.paciente.dados.FrequenciaAlimentar</class>
		<class>br.com.projetotcc.entidades.paciente.dados.HistoricoSocialFamiliar</class>
		<class>br.com.projetotcc.entidades.paciente.dados.HistoricoAlimentarNutricional</class>
		<class>br.com.projetotcc.entidades.paciente.dados.Identificacao</class>
		<class>br.com.projetotcc.entidades.pessoa.Nutricionista</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/*" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="javax.persistence.jdbc.user" value="*"/>
			<property name="javax.persistence.jdbc.password" value="*"/>
		</properties>
	</persistence-unit>
</persistence>
